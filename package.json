{
  "name": "opencerts-demo-decentralized-renderer",
  "version": "0.0.0-development",
  "private": true,
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "dependencies": {
    "@emotion/core": "10.0.35",
    "@emotion/styled": "10.0.27",
    "@govtechsg/decentralized-renderer-react-components": "2.0.4",
    "@hot-loader/react-dom": "16.10.2",
    "bootstrap": "^4.3.1",
    "date-fns": "^1.30.1",
    "debug": "4.1.1",
    "lodash": "^4.17.21",
    "moment-timezone": "^0.5.43",
    "react": "16.10.2",
    "react-dom": "16.10.2",
    "react-hot-loader": "4.12.21"
  },
  "scripts": {
    "build": "NODE_ENV=production webpack --progress --mode production",
    "dev": "NODE_ENV=development webpack-dev-server",
    "lint": "eslint . --ext .ts,.tsx,.mdx --max-warnings 0",
    "lint:fix": "npm run lint -- --fix",
    "storybook": "start-storybook -p 6006 -s .",
    "storybook:build": "build-storybook -o docs",
    "test": "jest --ci",
    "test:coverage": "npm run test -- --coverage",
    "test:watch": "npm run test -- --watch",
    "semantic-release": "semantic-release"
  },
  "devDependencies": {
    "@babel/core": "7.8.7",
    "@babel/plugin-transform-unicode-regex": "^7.22.5",
    "@babel/plugin-transform-unicode-sets-regex": "^7.22.5",
    "@babel/preset-env": "7.8.7",
    "@babel/preset-react": "7.8.3",
    "@babel/preset-typescript": "7.8.3",
    "@emotion/babel-preset-css-prop": "10.0.27",
    "@storybook/addon-actions": "5.3.21",
    "@storybook/addon-docs": "5.3.21",
    "@storybook/addons": "5.3.22",
    "@storybook/react": "5.3.21",
    "@testing-library/react": "9.4.1",
    "@types/debug": "4.1.9",
    "@types/jest": "25.1.5",
    "@types/lodash": "^4.14.199",
    "@types/moment-timezone": "^0.5.13",
    "@types/react": "16.9.56",
    "@typescript-eslint/eslint-plugin": "2.18.0",
    "@typescript-eslint/parser": "2.18.0",
    "babel-jest": "25.1.0",
    "babel-loader": "8.0.6",
    "brotli-webpack-plugin": "1.1.0",
    "compression-webpack-plugin": "3.1.0",
    "copy-webpack-plugin": "^5.1.2",
    "css-loader": "3.4.2",
    "eslint": "6.8.0",
    "eslint-config-prettier": "6.10.1",
    "eslint-plugin-jest": "23.6.0",
    "eslint-plugin-mdx": "1.6.9",
    "eslint-plugin-prettier": "3.1.4",
    "eslint-plugin-react": "7.18.3",
    "eslint-plugin-react-hooks": "2.3.0",
    "file-loader": "5.0.2",
    "html-webpack-plugin": "3.2.0",
    "jest": "25.1.0",
    "prettier": "1.19.1",
    "react-docgen-typescript-loader": "3.6.0",
    "semantic-release": "17.0.8",
    "style-loader": "1.1.4",
    "typescript": "3.7.7",
    "webpack": "4.41.6",
    "webpack-bundle-analyzer": "^3.6.1",
    "webpack-cli": "3.3.12",
    "webpack-dev-server": "3.10.3"
  },
  "license": "GPL-3.0",
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ],
      "@babel/preset-typescript",
      "@babel/preset-react",
      "@emotion/babel-preset-css-prop"
    ],
    "plugins": [
      "@babel/plugin-transform-unicode-sets-regex"
    ]
  },
  "browserslist": [
    "last 2 Chrome versions",
    "last 2 Opera versions",
    "last 2 Firefox versions",
    "last 2 Edge versions",
    "last 1 Safari version",
    "IE >= 11"
  ],
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "env": {
      "browser": true,
      "jest": true
    },
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "plugin:react/recommended",
      "plugin:jest/all",
      "plugin:prettier/recommended",
      "plugin:mdx/recommended",
      "prettier/@typescript-eslint",
      "prettier/react"
    ],
    "plugins": [
      "react-hooks"
    ],
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "rules": {
      "@typescript-eslint/explicit-function-return-type": [
        "warn",
        {
          "allowExpressions": true,
          "allowTypedFunctionExpressions": true
        }
      ],
      "@typescript-eslint/no-explicit-any": "off",
      "react/prop-types": "off",
      "react/self-closing-comp": "error",
      "jest/prefer-expect-assertions": "off",
      "array-callback-return": "error",
      "react-hooks/rules-of-hooks": "error",
      "react-hooks/exhaustive-deps": "error"
    },
    "overrides": [
      {
        "files": [
          "*.md"
        ],
        "rules": {
          "prettier/prettier": [
            2,
            {
              "parser": "markdown"
            }
          ]
        }
      },
      {
        "files": [
          "*.mdx"
        ],
        "extends": [
          "plugin:mdx/overrides"
        ]
      }
    ]
  },
  "jest": {
    "coverageDirectory": "coverage",
    "moduleNameMapper": {
      "\\.(jpg|ico|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(css|less)$": "<rootDir>/__mocks__/fileMock.js"
    }
  },
  "prettier": {
    "printWidth": 120
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/OpenCerts/demo-opencerts-renderer.git"
  }
}
